<div class="div-fix-cardapio"></div> <!-- NÂO APAGA PELO AMOR DE DEUS -->

<div class="cadastro">
       <img src="/images/hamburger.png" alt=""> 
      <h1 class="logo">La Boucherie</h1> 

        <h3>Cadastro de cardapio</h3>

            {{>_msg}}

           

      <form method="post">
        <div class="form-group">
            <input type="text" name="nome" id="nome" placeholder="Digite o nome do lanche" required>
        </div>
        <div class="form-group">
            <input type="text" name="descricao" id="descricao" placeholder="Digite a descrição do lanche" required>
        </div>
        <div class="form-group">
            <input type="text" name="endereco" id="endereco" placeholder="Digite seu endereço" required>
        </div>
        <div class="form-group">
          <input type="email" id="email" name="email" placeholder="Digite seu e-mail" required>
          <div id="emailHelp" class="form-text">Nunca compartilharemos seu e-mail com ninguém.</div>
        </div>
        <div class="form-group">
          <input type="password" id="password" name="senha" placeholder="Digite sua senha" required>
        </div>
        <div class="form-group">
          <button type="submit">Cadastrar</button>
        </div>
      </form>
    <p>Já tem cadastro? <a href="/usuario/login">Venha fazer login!</a></p>
    </div>
</div>
