<div class="div-fix-cardapio"></div> <!-- NÂO APAGA PELO AMOR DE DEUS -->

<div class="cadastro">
       <img src="/images/hamburger.png" alt=""> 
      <h1 class="logo">La Boucherie</h1> 

        <h3>Cadastro de cardápio</h3>

            {{>_msg}}

           

      <form method="post">
        <div class="form-group">
            <input type="text" name="nome" id="nome" placeholder="Digite o nome do lanche" required>
        </div>
        <div class="form-group">
            <input type="text" name="descricao" id="descricao" placeholder="Digite a descrição do lanche" required>
        </div>
        <div class="form-group">
            <input type="text" name="foto" id="foto" placeholder="Digite o endereço da foto desejada" value="/images/"  required>
        </div>
         <div class="form-group">
            <input type="text" name="fotoDestaque" id="fotoDestaque" placeholder="Digite o endereço da foto desejada" value="/images/" required>
        </div>
        <div class="form-group">
          <input type="text" id="preco" name="preco" placeholder="Digite o preço. Ex: xx.xx" required>
        </div>
        <div class="form-group">
          <button type="submit">Cadastrar</button>
        </div>
      </form>
</div>
