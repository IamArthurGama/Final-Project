<div class="card">
    <h2>Página de alteração do "sobre nós"</h2>
    <ul class="list-group list-group-flush">
        {{#each responseModel.data}}
        <li class="list-group-item">
            <div class="row">
                <div class="col">{{sobre}}</div>
                <div class="col d-flex flex-row-reverse">
                    <a href="/sobre/remove/{{id}}" class="btn btn-danger ms-2">Deletar</a>
                    <a href="/sobre/update/{{id}}" class="btn btn-success ms-2">Editar</a>
                    <a href="/sobre/find/{{id}}" class="btn btn-primary ms-2">Detalhes</a>
                </div>
            </div>
        </li>
        {{/each}}
    </ul>
</div>
<div>
    <form method="post">
        <div class="mb-3">
            <textarea name="sobre" class="form-control" aria-label="With textarea" placeholder="Digite o que você quer que apareça no 'Sobre nós'"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
    </form>
</div>